---
import Layout from "@/layouts/Layout.astro";
import { Tracking } from "@/components/Traking";
import { PackageSearch } from "lucide-react";
---

<Layout
  title="TPC - Seguimiento"
  description="Seguimiento de los clientes de la tienda de TPC"
>
  <main class="">
    <div class="max-w-4xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
      <div class="text-center mb-10">
        <div
          class="inline-block p-2 bg-gradient-to-r from-yellow-400 to-orange-400 rounded-xl mb-4"
        >
          <div class="bg-white rounded-lg p-1">
            <PackageSearch size={50} color="orange" />
          </div>
        </div>
        <h1
          class="text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-orange-400 sm:text-5xl"
        >
          Rastreo de Guías
        </h1>
        <p class="mt-3 text-lg text-gray-600">
          Localiza tu envío nuestro sistema de seguimiento
        </p>
      </div>
      <Tracking client:visible />
    </div>
  </main>
</Layout>
